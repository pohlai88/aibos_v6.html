# Database Configuration
DATABASE_URL=postgresql://aibos:aibos@localhost:5432/aibos_dev
DATABASE_TEST_URL=postgresql://aibos:aibos@localhost:5432/aibos_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=AIbos Ledger
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Authentication
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Supabase Configuration (if using)
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Email Configuration
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Storage
STORAGE_BACKEND=local
STORAGE_PATH=./uploads
# For S3: AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY, AWS_S3_BUCKET

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=your-sentry-dsn
ENABLE_METRICS=true

# Data Location (for compliance)
DEFAULT_REGION=MY
ALLOWED_REGIONS=MY,SG,US,EU 